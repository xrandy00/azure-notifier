{
  "manifest_version": 3,
  "name": "Azure Notifier",
  "version": "0.1.0",
  "description": "Extension listening and reacting to Azure DevOps changes while on Boards page. It adds notifications, changelog and collapsible icons to Board columns.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Azure Notifier",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "alert_1.wav",
        "alert_2.wav",
        "alert_3.wav",
        "alert_4.wav",
        "alert_5.wav",
        "cheer_1.mp3",
        "cheer_2.wav",
        "cheer_3.wav",
        "cheer_4.wav",
        "cheer_5.wav",
        "cheer_6.wav",
        "cheer_7.wav",
        "cheer_8.wav",
        "cheer_9.wav"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://dev.azure.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "balloons.css"
      ]
    }
  ]
}